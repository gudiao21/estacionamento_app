<body class="banner edit-banner">
<div class="form-container">

<h1>Editar Veículo</h1>
<%= form_for(@vehicle, url: update_vehicle_path(@vehicle.placa), method: :patch) do |f| %>
    <%= f.label :placa, "Placa do Veículo: " %>
    <%= f.text_field :placa %>
    <p><%= f.label :nome_veiculo, "Nome do Veículo: " %>
    <%= f.text_field :nome_veiculo %></p>
    <%= f.label :dono_do_veiculo, "Dono do Veículo: " %>
    <%= f.text_field :dono_do_veiculo %>
    <%= f.label :hora_entrada, "Hora de Entrada: " %>
    <%= f.text_field :hora_entrada %>
    <%= f.label :hora_saida, "Hora de Saída: " %>
    <%= f.text_field :hora_saida %>
    <p><%= f.label :total_a_pagar_por_veiculo, "Total a pagar por veículo: " %></p>
    <%= f.text_field :total_a_pagar_por_veiculo %>
    <p><%= f.submit "Editar" %></p>
<% end %>
</body>